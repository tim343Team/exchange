<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8"
    android:background="?attr/title_layout_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_score_record_amount"
            android:gravity="center_vertical"
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:textColor="?attr/primary_text" />

        <TextView
            android:id="@+id/tvSmobl"
            android:textSize="13sp"
            android:textColor="?attr/primary_text"
            android:gravity="center_vertical"
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_score_record_time"
            android:gravity="center_vertical"
            android:text=""
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:textColor="?attr/primary_text" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:textSize="13sp"
            android:textColor="?attr/primary_text"
            android:gravity="center_vertical"
            android:text="@string/number"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="13sp"
            android:textColor="?attr/primary_text"
            android:gravity="center_vertical"
            android:text="@string/currency"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="13sp"
            android:textColor="?attr/primary_text"
            android:gravity="center_vertical"
            android:text="@string/my_commission_time"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>