<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primary_back_dark"
    android:orientation="vertical"
    tools:context="com.bibi.ui.buy_or_sell.C2CBuyOrSellActivity">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_212"
        android:background="@color/color_2c2c2c">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_marginTop="@dimen/dimen_60"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.bibi.customview.CircleImageView
                        android:id="@+id/ivHeader"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:src="@mipmap/icon_default_header"
                        android:gravity="center"
                        android:textColor="@color/white" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="8dp"
                                android:singleLine="true"
                                android:text="Sukey"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTradeAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="@dimen/dimen_4"
                            android:singleLine="true"
                            android:text="成交量：  1256"
                            android:textColor="@color/colorTextNormal"
                            android:textSize="11dp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvRemainAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="数量 49.85522455"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tvLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:text="限额2k~90k CNY"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:minHeight="24dp"
                    android:text="¥75000.00"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_3"
                    android:text="@string/four_danjia"
                    android:textColor="@color/colorTextNormal"
                    android:textSize="11dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp27"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivZhifubao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_zhifubao"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="1dp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/ivWeChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/icon_wechat"
                        android:gravity="center"
                        android:minHeight="0dp"
                        android:paddingBottom="1dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="1dp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/ivUnionPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/icon_yinlian"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="1dp"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/ivGuoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/icon_guoji"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingTop="1dp"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
    <!--标题-->
    <RelativeLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/transparency"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/icon_back"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="买入"
            android:textColor="@color/white"
            android:textSize="17dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/background"
        android:layout_marginTop="-22dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_16"
        android:paddingEnd="@dimen/dimen_16"
        android:paddingTop="@dimen/dimen_20"
        android:paddingBottom="@dimen/dimen_20"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginEnd="@dimen/dimen_16"
        android:background="@drawable/circle_conner_rect_white_line">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_much_buy"
            android:textColor="?attr/primary_text"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dimen_16"
                android:background="@drawable/shape_dash_rect">

                <EditText
                    android:id="@+id/etOtherCoin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_32"
                    android:background="@null"
                    android:inputType="number"
                    android:layout_marginEnd="@dimen/dimen_45"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/primaryTextGray"
                    android:textSize="14dp"
                    android:hint="请输入您想要买入的数量"
                    android:paddingStart="@dimen/dimen_8"/>

                <TextView
                    android:id="@+id/tvOtherCoinText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:text="USDT"
                    android:textColor="@color/text_balck_161616"
                    android:textSize="13dp"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/tvAllNu"
                android:layout_width="@dimen/dimen_64"
                android:layout_height="@dimen/dimen_32"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/circle_conner_rect_primay"
                android:text="全部"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_2"
            android:text=""
            android:textColor="@color/color_f15057"
            android:textSize="14dp"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:text="@string/Transaction_amount"
            android:textColor="?attr/primary_text"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/dimen_16"
                android:background="@drawable/shape_dash_rect">

                <EditText
                    android:id="@+id/etLocalCoin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_32"
                    android:background="@null"
                    android:inputType="number"
                    android:layout_marginEnd="@dimen/dimen_45"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/primaryTextGray"
                    android:hint="请输入您想要买入的金额"
                    android:textSize="14dp"
                    android:paddingStart="@dimen/dimen_8"/>

                <TextView
                    android:id="@+id/tvLocalCoinText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_8"
                    android:text="CNY"
                    android:textColor="@color/text_balck_161616"
                    android:textSize="13dp"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/tvAllPrice"
                android:layout_width="@dimen/dimen_64"
                android:layout_height="@dimen/dimen_32"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/circle_conner_rect_primay"
                android:text="全部"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:text="*订单总价需在广告发布价格之内"
            android:textColor="@color/color_f15057"
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/tvBuy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_30"
            android:background="@drawable/shape_gradient_primary_right"
            android:gravity="center"
            android:text="买入"
            android:textColor="@color/white"
            android:textSize="14dp"/>

    </LinearLayout>




</RelativeLayout>
