<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_eeeeee"
    android:orientation="vertical"
    tools:context="com.bibi.ui.buy_or_sell.C2CBuyOrSellActivity">

    <!--标题-->
    <RelativeLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/color_2c2c2c"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/icon_back"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/orderdetail"
            android:textColor="@color/white"
            android:textSize="17dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llBottom"
        android:layout_below="@+id/llTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_8"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_200"
                android:layout_marginBottom="-15dp"
                android:background="@color/color_2c2c2c">

                <ImageView
                    android:layout_width="@dimen/dimen_165"
                    android:layout_height="@dimen/dimen_114"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dimen_38"
                    android:background="@drawable/img_pay_bg" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_50"
                    android:layout_marginStart="@dimen/dimen_32"
                    android:textColor="@color/main_color"
                    android:textSize="24dp"/>

                <TextView
                    android:id="@+id/tvStatusSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvStatus"
                    android:layout_marginStart="@dimen/dimen_32"
                    android:textColor="@color/main_color"
                    android:textSize="14dp"/>

                <LinearLayout
                    android:id="@+id/llLastTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dimen_60"
                    android:layout_marginStart="@dimen/dimen_24"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvLastTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_6"
                        android:layout_marginStart="@dimen/dimen_6"
                        android:text="14分24秒"
                        android:textColor="@color/color_f07575"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自动关闭"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </LinearLayout>

            </RelativeLayout>

            <!--详情-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/background"
                android:layout_marginEnd="@dimen/dimen_16"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_marginTop="-22dp"
                android:background="@drawable/circle_conner_rect_white_line"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_32"
                android:paddingEnd="@dimen/dimen_16"
                android:paddingStart="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/orderdetail"
                    android:textColor="?attr/primary_text"
                    android:textSize="19dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Transaction_amount"
                        android:textColor="@color/primaryTextGray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/color_f15057"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transactions_Number"
                        android:textColor="@color/primaryTextGray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvCount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="?attr/black"
                        android:textSize="14dp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fee"
                        android:textColor="@color/primaryTextGray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvFee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transaction_price"
                        android:textColor="@color/primaryTextGray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/color_f15057"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Transaction_object"
                        android:textColor="@color/primaryTextGray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvOtherSide"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/primaryTextGray"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Trading_time"
                        android:textColor="@color/primaryTextGray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/primaryTextGray"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Order_number"
                        android:textColor="@color/primaryTextGray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tvOrderSn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text=""
                        android:textColor="@color/primaryTextGray"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPayInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <!--支付宝-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/background"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@drawable/circle_conner_rect_white_line"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimen_16"
                    android:paddingEnd="@dimen/dimen_16"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/icon_zhifubao"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:text="@string/alipay"
                        android:textColor="?attr/primary_text"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ali_account"
                            android:textColor="@color/primaryTextGray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tvZhifubao"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:hint="@string/paymentTip"
                            android:text=""
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivZhifubaoQR"
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="@dimen/dimen_80"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_to_qr_reg"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvZhifubaoQR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:layout_gravity="center"
                        android:text="@string/savePhotoLongPress"
                        android:textColor="?attr/primary_text_gray"
                        android:textSize="14dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <!--微信-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/background"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@drawable/circle_conner_rect_white_line"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimen_16"
                    android:paddingEnd="@dimen/dimen_16"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/icon_wechat"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:text="@string/weChat"
                        android:textColor="?attr/primary_text"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/weichat_account"
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tvWeChat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:hint="@string/paymentTip"
                            android:text=""
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivWeChatQR"
                        android:layout_width="@dimen/dimen_80"
                        android:layout_height="@dimen/dimen_80"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_to_qr_reg"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvWeChatQR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:layout_gravity="center"
                        android:text="@string/savePhotoLongPress"
                        android:textColor="?attr/primary_text_gray"
                        android:textSize="14dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <!--银行卡-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/background"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@drawable/circle_conner_rect_white_line"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimen_32"
                    android:paddingEnd="@dimen/dimen_16"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dimen_16"
                            android:layout_height="@dimen/dimen_12"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_credit_card" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_6"
                            android:text="@string/credit_car"
                            android:textColor="?attr/primary_text"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bankName"
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tvrealName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text=""
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bank"
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tvBank"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text=""
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account_opening_branch"
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tvBranch"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text=""
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unionpay_account"
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tvBankNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:hint="@string/paymentTip3"
                            android:text=""
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />
                    </LinearLayout>


                </LinearLayout>

                <!--其它-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/background"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:background="@drawable/circle_conner_rect_white_line"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimen_32"
                    android:paddingEnd="@dimen/dimen_16"
                    android:paddingStart="@dimen/dimen_16"
                    android:paddingTop="@dimen/dimen_20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/icon_guoji"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:text="@string/International_Payment"
                        android:textColor="?attr/primary_text"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bankName"
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tvInrealName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text=""
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Collection_Address"
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tvInAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:hint="暂未添加收款地址"
                            android:text=""
                            android:textColor="?attr/primary_text_gray"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_5"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:background="@color/light_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20"
                        android:hint="@string/paymentTip3"
                        android:text="@string/pay_note"
                        android:textColor="@color/color_f15057"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dp28"
                android:text="@string/pay_about"
                android:textColor="?attr/primary_text_gray"
                android:textSize="14dp" />
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?attr/title_layout_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:visibility="visible">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/dimen_20"
                android:paddingStart="@dimen/dimen_20"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imgPhone"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_phone"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ibDetail"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_20"
                    android:layout_toEndOf="@+id/imgPhone"
                    android:background="@drawable/icon_message"
                    android:visibility="invisible"/>

                <!--取消-->
                <RelativeLayout
                    android:id="@+id/llOperate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/ibDetail"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvCancle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:layout_toLeftOf="@+id/tvPayDone"
                        android:background="@drawable/circle_conner_rect_primay"
                        android:gravity="center"
                        android:paddingEnd="@dimen/dimen_20"
                        android:paddingStart="@dimen/dimen_20"
                        android:text="@string/Cancel_order"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvPayDone"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_gradient_primary_right"
                        android:gravity="center"
                        android:paddingEnd="@dimen/dimen_28"
                        android:paddingStart="@dimen/dimen_28"
                        android:text="@string/Payment_done"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:visibility="visible" />
                </RelativeLayout>

                <!--申诉2-->
                <RelativeLayout
                    android:id="@+id/llAppeal2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/llRelease"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvAppeal2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_gradient_primary_right"
                        android:gravity="center"
                        android:paddingEnd="@dimen/dimen_20"
                        android:paddingStart="@dimen/dimen_20"
                        android:text="申诉"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </RelativeLayout>

                <!--申诉-->
                <RelativeLayout
                    android:id="@+id/llAppeal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvAppeal"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_gradient_primary_right"
                        android:gravity="center"
                        android:paddingEnd="@dimen/dimen_80"
                        android:paddingStart="@dimen/dimen_80"
                        android:text="@string/paymentTip5"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </RelativeLayout>

                <!--放行-->
                <RelativeLayout
                    android:id="@+id/llRelease"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvRelease"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_gradient_primary_right"
                        android:gravity="center"
                        android:paddingEnd="@dimen/dimen_80"
                        android:paddingStart="@dimen/dimen_80"
                        android:text="@string/order_release"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:visibility="visible" />
                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
