<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/tab2"
    android:visibility="gone">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手动跟单仅跟牛人最新持仓单，平仓后结束。"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本次跟单需扣除100.0000积分跟单费用。"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="@string/follow_property"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/typeRecyAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_12"
        android:layout_marginEnd="@dimen/dimen_12"
        android:layout_marginTop="@dimen/dimen_12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_80"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/price"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dimen_24"
                android:layout_weight="1"
                android:background="@drawable/shape_dash_rect"
                android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingEnd="56dp"
                android:paddingStart="10dp"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/text_c5c5c5"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_80"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/profit_price"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/tvProfit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dimen_24"
                android:layout_weight="1"
                android:background="@drawable/shape_dash_rect"
                android:digits="1234567890."
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingEnd="56dp"
                android:paddingStart="10dp"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/text_c5c5c5"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_80"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/loose_price"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/tvLoose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dimen_24"
                android:layout_weight="1"
                android:background="@drawable/shape_dash_rect"
                android:digits="1234567890."
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingEnd="56dp"
                android:paddingStart="10dp"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/text_c5c5c5"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_80"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/follow_amount"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <EditText
                android:id="@+id/mOneTCP"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dimen_24"
                android:layout_weight="1"
                android:background="@drawable/shape_dash_rect"
                android:digits="1234567890."
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/text_number"
                android:inputType="number"
                android:maxLines="1"
                android:paddingEnd="56dp"
                android:paddingStart="10dp"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/text_c5c5c5"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mOneSub"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dimen_6"
                android:background="@drawable/shape_dash_rect"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/mOneAdd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_dash_rect"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_80"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/leverage"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/mRadioGroupMarginAuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_24"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/mTabMarginOneAuto"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:background="@drawable/selector_buy_background"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:textColor="@color/radiobutton_one_color"
                    android:textSize="16sp"
                    android:visibility="invisible"/>

                <RadioButton
                    android:id="@+id/mTabMarginTwoAuto"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:layout_weight="1"
                    android:background="@drawable/selector_buy_background"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/radiobutton_one_color"
                    android:textSize="16sp"
                    android:visibility="invisible"/>

                <RadioButton
                    android:id="@+id/mTabMarginThreeAuto"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_buy_background"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="@color/radiobutton_one_color"
                    android:textSize="16sp"
                    android:visibility="invisible"/>

            </RadioGroup>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dimen_80"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/capital_password"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/mPassword"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dimen_24"
                android:layout_weight="1"
                android:background="@drawable/shape_dash_rect"
                android:digits="1234567890."
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/text_ad_money_hint"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingEnd="56dp"
                android:paddingStart="10dp"
                android:textColor="@color/primaryText"
                android:textColorHint="@color/text_c5c5c5"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_24"
        android:background="@drawable/shape_gradient_primary_right"
        android:text="@string/follow_admit_auto"
        android:textSize="14sp"
        android:textColor="@color/white"/>

</LinearLayout>