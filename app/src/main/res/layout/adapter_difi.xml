<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view"
    android:padding="@dimen/dimen_25"
    android:layout_marginTop="@dimen/dimen_16"
    android:layout_marginBottom="@dimen/dimen_16"
    android:layout_marginStart="@dimen/dimen_16"
    android:layout_marginEnd="@dimen/dimen_16"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:background="@drawable/icon_bite"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dimen_12"
            android:layout_marginEnd="@dimen/dimen_12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/dimen_14"
                android:textColor="?attr/primary_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未知字段"
                android:textSize="@dimen/dimen_10"
                android:textColor="?attr/primary_text_gray"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvKline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_6"
            android:paddingEnd="@dimen/dimen_6"
            android:paddingTop="@dimen/dimen_2"
            android:paddingBottom="@dimen/dimen_2"
            android:background="@drawable/circle_conner_rect_primay_12_back"
            android:text="现货交易"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/current_price"
            android:textSize="@dimen/dimen_10"
            android:textColor="?attr/primary_text_gray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/estimat"
            android:textSize="@dimen/dimen_10"
            android:textColor="?attr/primary_text_gray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/change"
            android:textSize="@dimen/dimen_10"
            android:textColor="?attr/primary_text_gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/current_price"
            android:textSize="@dimen/dimen_10"
            android:textColor="?attr/primary_text"/>

        <TextView
            android:id="@+id/kDataText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="未知字段"
            android:textSize="@dimen/dimen_10"
            android:textColor="?attr/primary_text"/>

        <TextView
            android:id="@+id/item_home_chg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/change"
            android:textSize="@dimen/dimen_10"
            android:textColor="?attr/primary_text"/>

    </LinearLayout>

</LinearLayout>