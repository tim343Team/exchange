<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_1A212A"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/color_1A212A"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibOpen"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/icon_side_open_night"
            android:visibility="visible" />

        <View
            android:id="@+id/view_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvCurrencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:minWidth="48dp"
            android:textColor="#fff"
            android:textSize="14dp"
            android:visibility="visible" />

    </LinearLayout>


    <com.bibi.customview.intercept.WonderfulScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_1A212A"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_now_price"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/kDataOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="0.9"
                            android:scaleY="1.1"
                            android:text="77777.01"
                            android:textColor="@color/typeGreen"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/kDataImg"
                            android:layout_width="@dimen/dimen_8"
                            android:layout_height="@dimen/dimen_20"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dimen_1"
                            android:background="@drawable/icon_rise" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/kRange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="+20%"
                            android:textColor="@color/typeGreen"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/kDataText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_16"
                            android:scaleX="0.9"
                            android:scaleY="1.1"
                            android:text="≈804.00cny"
                            android:textColor="@color/primaryTextGray"
                            android:textSize="14dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dimen_32"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_it_gao"
                                android:textColor="@color/primaryTextGray"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/kUp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_3"
                                android:text="7290.00"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/dimen_2"
                            android:layout_height="@dimen/dimen_32"
                            android:background="@color/primaryTextGray"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_it_di"
                                android:textColor="@color/primaryTextGray"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/kLow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_3"
                                android:text="7290.00"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16dp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAllTab"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/color_1A212A"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_6"
                    android:paddingEnd="@dimen/dimen_6"
                    android:paddingStart="@dimen/dimen_6">

                    <LinearLayout
                        android:id="@+id/tab"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp">

                        <TextView
                            android:id="@+id/tvMore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/more"
                            android:textColor="@color/primaryTextGray"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="-4dp"
                            android:layout_marginLeft="-2dp"
                            android:src="@mipmap/icon_drop" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp">

                        <TextView
                            android:id="@+id/tvIndex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/index"
                            android:textColor="@color/primaryTextGray"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="-4dp"
                            android:layout_marginLeft="-2dp"
                            android:src="@mipmap/icon_drop" />
                    </LinearLayout>
                </LinearLayout>

                <com.bibi.customview.MyViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:paddingStart="@dimen/dimen_6"
                    android:paddingEnd="@dimen/dimen_6"
                    android:paddingBottom="@dimen/dimen_3"
                    android:overScrollMode="never" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/tvPrice"
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_16"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:paddingStart="@dimen/dimen_16"
                        android:paddingEnd="@dimen/dimen_16"
                        android:gravity="center_vertical"
                        android:background="@drawable/white_shape_radius"
                        android:inputType="numberDecimal"
                        android:hint="余额：1235 usdt"
                        android:text=""
                        android:textColor="@color/primaryText"
                        android:textSize="@dimen/dimen_14"/>

                    <TextView
                        android:id="@+id/tvLeverage"
                        android:layout_width="0dp"
                        android:background="@drawable/white_shape_radius"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:layout_marginBottom="@dimen/dimen_16"
                        android:drawableRight="@drawable/icon_pull_down"
                        android:text="倍率：10倍"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:paddingStart="@dimen/dimen_16"
                        android:paddingEnd="@dimen/dimen_16"
                        android:gravity="center_vertical"
                        android:layout_weight="0.65" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/llVertical"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:layout_marginBottom="@dimen/dimen_12"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingStart="@dimen/dp10"
                    android:background="@color/color_1A212A"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvBuy"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.9"
                        android:background="@color/color_green"
                        android:gravity="center"
                        android:text="@string/bullish"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tvSell"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.9"
                        android:background="@color/typeRed"
                        android:gravity="center"
                        android:text="@string/bearish"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                </LinearLayout>

                <com.bibi.customview.CustomViewPager
                    android:id="@+id/vpDepth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:overScrollMode="never"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

    </com.bibi.customview.intercept.WonderfulScrollView>

</LinearLayout>