<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4ead3"
    android:orientation="vertical">

    <!--标题-->
    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/color_f4ead3"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/icon_back_white"
            android:visibility="visible" />

        <View
            android:id="@+id/view_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="@string/my_promotion"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ibShare"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:minWidth="48dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_share"
            android:visibility="invisible" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llTitle"
            android:background="@color/color_f4ead3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dimen_147"
                    android:layout_height="@dimen/dimen_47"
                    android:src="@drawable/tuiguang_bg_text" />

                <ImageView
                    android:layout_width="@dimen/dimen_176"
                    android:layout_height="@dimen/dimen_126"
                    android:layout_marginStart="-12dp"
                    android:src="@drawable/tuiguang_bg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16"
                android:layout_marginStart="@dimen/dimen_16"
                android:background="@drawable/circle_corner_rect_white_back"
                android:orientation="vertical"
                android:visibility="visible">

                <!--我的推广-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color_f4ead3"
                        android:paddingBottom="@dimen/dimen_6"
                        android:paddingEnd="@dimen/dimen_12"
                        android:paddingStart="@dimen/dimen_12"
                        android:paddingTop="@dimen/dimen_6">

                        <ImageView
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="@dimen/dimen_50"
                            android:background="@drawable/bg_promotion_1" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_24"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:text="@string/my_customer"
                            android:textColor="@color/blue_main"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dimen_8">

                            <TextView
                                android:id="@+id/tvCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/blue_main"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="@dimen/dimen_12"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/dimen_12"
                                android:layout_marginStart="@dimen/dimen_12"
                                android:background="@color/blue_main"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tvTotalCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="团队人数："
                                android:textColor="@color/blue_main"
                                android:textSize="14sp"
                                android:visibility="gone"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:background="@color/line_gray" />

                <!--交易额-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color_f4ead3"
                        android:paddingBottom="@dimen/dimen_6"
                        android:paddingEnd="@dimen/dimen_12"
                        android:paddingStart="@dimen/dimen_12"
                        android:paddingTop="@dimen/dimen_6">

                        <ImageView
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="@dimen/dimen_50"
                            android:background="@drawable/bg_promotion_2" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_24"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTotalExchangeAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:text="总交易额（USDT）："
                            android:textColor="@color/blue_main"
                            android:textSize="14sp"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dimen_8">

                            <TextView
                                android:id="@+id/tvAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="累计佣金（USDT）："
                                android:textColor="@color/blue_main"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:background="@color/line_gray" />

                <!--推广-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/color_f4ead3"
                        android:paddingBottom="@dimen/dimen_6"
                        android:paddingEnd="@dimen/dimen_12"
                        android:paddingStart="@dimen/dimen_12"
                        android:paddingTop="@dimen/dimen_6">

                        <ImageView
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="@dimen/dimen_50"
                            android:background="@drawable/bg_promotion_2" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_24"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPromotionExchangeAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:text="我的推广交易额："
                            android:textColor="@color/blue_main"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dimen_8">

                            <TextView
                                android:id="@+id/tvLastweekPromotionExchangeAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="上周我的推广交易额："
                                android:textColor="@color/blue_main"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvPromotion"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginBottom="@dimen/dimen_16"
                    android:layout_marginEnd="@dimen/dimen_40"
                    android:layout_marginStart="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:background="@drawable/shape_gradient_primary_right"
                    android:gravity="center"
                    android:text="@string/promote_friends"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_16"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_marginTop="@dimen/dimen_24"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/llRecord"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_88"
                    android:layout_weight="1"
                    android:background="@drawable/bg_circle_back"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivRecord"
                        android:layout_width="@dimen/dimen_32"
                        android:layout_height="@dimen/dimen_32"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:background="@drawable/icon_my_customer" />

                    <TextView
                        android:id="@+id/tvRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/ivRecord"
                        android:layout_marginBottom="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:text="@string/my_customer"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llReward"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_88"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_weight="1"
                    android:background="@drawable/bg_circle_back_2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivReward"
                        android:layout_width="@dimen/dimen_35"
                        android:layout_height="@dimen/dimen_36"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_8"
                        android:layout_marginStart="@dimen/dimen_16"
                        android:background="@drawable/icon_my_commission" />

                    <TextView
                        android:id="@+id/tvReward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/ivReward"
                        android:layout_marginBottom="@dimen/dimen_16"
                        android:layout_marginEnd="@dimen/dimen_16"
                        android:text="@string/my_commission_detail"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <!--<ImageView-->
                    <!--android:layout_width="@dimen/dimen_35"-->
                    <!--android:layout_height="@dimen/dimen_36"-->
                    <!--android:background="@drawable/icon_my_commission"/>-->

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/dimen_12"-->
                    <!--android:text="@string/my_commission_detail"-->
                    <!--android:textSize="13sp"-->
                    <!--android:textColor="@color/primaryTextGray"/>-->
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llOut"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_88"
                    android:layout_weight="1"
                    android:background="@drawable/circle_corner_rect_white_back"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/dimen_35"
                        android:layout_height="@dimen/dimen_36"
                        android:background="@drawable/icon_my_commission" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:text="@string/my_commission_out"
                        android:textColor="@color/primaryTextGray"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>