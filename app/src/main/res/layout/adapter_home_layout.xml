<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/title_layout_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_home_img"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginEnd="@dimen/dimen_8"/>

        <TextView
            android:id="@+id/item_home_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/color_333333"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/item_home_coin_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/primaryTextGray"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_home_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/color_00b274"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imgChg"
                android:layout_width="@dimen/dimen_6"
                android:layout_height="@dimen/dimen_14"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dimen_4"
                android:background="@drawable/icon_rise" />

        </LinearLayout>

        <TextView
            android:id="@+id/kDataText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.9"
            android:scaleY="1.1"
            android:textColor="@color/primaryTextGray"
            android:textSize="13dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/item_home_chg"
        android:layout_width="75dp"
        android:layout_height="29dp"
        android:layout_gravity="end |center_vertical"
        android:background="@drawable/selector_market_up_down"
        android:gravity="center"
        android:text="+15.00%"
        android:textColor="#ffffff"
        android:textSize="12dp" />

</LinearLayout>